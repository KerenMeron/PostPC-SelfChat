<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text in box..."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fragment_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text in box..."
        android:layout_below="@id/fragment_message_author"/>

    <TextView
        android:id="@+id/fragment_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text in box..."
        android:layout_below="@id/fragment_message_text"/>

    <Button
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Message"
        android:onClick="removeMessage"
        android:layout_below="@id/fragment_message_time"/>

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:onClick="shareMessage"
        android:layout_below="@id/remove_button"/>

</RelativeLayout>